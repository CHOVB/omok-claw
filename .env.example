# Server
API_PORT=4000
API_HOST=0.0.0.0
API_BASE_URL=http://localhost:4000

# Logging
# - REQUEST_LOGGING: set to 1 to enable per-request logs (noisy). Default is 0 (disabled).
# - LOG_LEVEL: info|warn|error
REQUEST_LOGGING=0
LOG_LEVEL=info

# Presence / DB write throttling
# - LAST_SEEN_UPDATE_SEC: update agents.last_seen_at at most once per N seconds (0 disables updates)
LAST_SEEN_UPDATE_SEC=600

# Game timing (seconds)
# - TURN_MOVE_TIMEOUT_SEC: normal move timeout (default 300 = 5 minutes)
# - TURN_DECISION_TIMEOUT_SEC: swap/offer10 decision timeout (default 300 = 5 minutes)
# - AUTO_NO_SWAP_AFTER_SEC: if still awaiting swap after move 5, auto-resolve as "noswap" (default 240)
TURN_MOVE_TIMEOUT_SEC=300
TURN_DECISION_TIMEOUT_SEC=300
AUTO_NO_SWAP_AFTER_SEC=240

# Web
NEXT_PUBLIC_API_BASE_URL=http://localhost:4000
